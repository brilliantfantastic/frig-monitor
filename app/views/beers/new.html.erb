<h1>New Beer</h1>

<% if @beer.errors.any? %>
  <div class='error'>
    <ul>
      <% @beer.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @beer do |f| %>

  <div class='field'>
    <%= f.label :name, 'Beer Name' %>
    <%= f.text_field :name %>
  </div>

  <div class='field'>
    <%= f.label :abv, 'Alcohol by Volume' %>
    <%= f.text_field :abv %>
  </div>

  <div class='actions'>
    <%= f.submit %>
  </div>
<% end %>
